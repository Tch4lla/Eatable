<%- include('partials/profileHead') -%>

<div class="container">
  <div class="row mt-5">
      <div class="col-6">
          <div>
              <p><strong>Welcome back</strong>: <%= userProfile.userName %></p>
              <a href="/logout" class="col-3 btn btn-primary">Logout</a>

              <a class="col-3 btn btn-primary" href="/feed">Return to Feed</a>
          </div>
          
          <div class="mt-5">
            <h2>Add a post</h2>
            <form action="/post/createPost" enctype="multipart/form-data" method="POST">
              <div class="mb-3">
                  <label for="title" class="form-label">Title</label>
                  <input type="text" class="form-control" id="title" name="title">
              </div>
              <div class="mb-3">
                <label for="caption" class="form-label">Caption</label>
                <textarea class="form-control" id="caption" name="caption"></textarea>
              </div>
              <div class="mb-3">
                <label for="tags[]" class="form-label">Tags</label>
                <select class="form-select" id="tags-input" name="tags[]" multiple data-allow-new="true">
                  <!-- <option selected disabled hidden value="Enter some tags">Choose a tag...</option> -->
                  <!-- <option value="1">Halal</option>
                  <option value="2">Vegetarian</option>
                  <option value="3">Vegan</option>
                  <option value="4">Restaurant</option>
                  <option value="5">GlutenFree</option>
                  <option value="6">Kosher</option>
                  <option value="7">PorkFree</option> -->
                </select>
                <!-- <label for="tags" class="form-label">Tags</label>
                <textarea class="form-control" id="tags" name="tags" placeholder="Enter some tags"></textarea> -->
              </div>
              <div class="mb-3">
                <label for="imgUpload" class="form-label">Image</label>
                <input type="file" class="form-control" id="imageUpload" name="file">
              </div>
              <button type="submit" class="btn btn-primary" value="Upload">Submit</button>
            </form>
          </div>
      </div>
      <div class="col-6">
        <ul class="row list-unstyled">
          <% for(var i=0; i<posts.length; i++) {%>
            <li class="col-6 justify-content-between mt-5">
              <a href="/post/<%= posts[i]._id%>">
                <img class="img-fluid" src="<%= posts[i].image%>">
              </a>
              
            </li>
          <% } %>
        </ul>


      </div>  
    </div>
  </div>
</div>

<script type="module">
  // var input = document.querySelector('textarea[name=tags]'),
  //     tagify = new Tagify(input)
  import Tags from '../js/tags.js';
  Tags.init("select[multiple]")
      
</script>
<%- include('partials/footer') -%>